<%= form_for @post, :url => posts_path, html: { multipart: true }  do |f| %>
	

	<%= f.hidden_field :user_id %>

	<%= f.label :title  %>
	<%= f.text_field :title %>
	<br>
	
	<%= f.label :itype %>
	<%= f.select :itype, options_for_select(["食物","衣服","電器","書籍","交通","其他"],["food","cloth","elec","book","car","other"]) %>
	<br>
	
	<%= f.label :price %>
	<%= f.text_field :price %>
	<br>
	
	<%= f.hidden_field :tclick, value: "0" %>

	<%= f.label :location %>
	<%= f.select :itype, options_for_select(["九舍","八舍","七舍","女二","竹軒","女十舍"],["9","8","7","g2","g1","g10"]) %>
	<br>

	<%= f.label :content %>
	<%= f.text_area :content%>
	<br>

	<%= f.file_field :avatar %>

	<%= f.hidden_field :is_sold, value: false %>
	<%= f.hidden_field :buyer_id, value: -1 %>

	<%= f.submit  "新增物品" ,class: "btn btn-primary" %>
<% end %>

<%= link_to "返回", posts_path,class: "btn btn-primary" %>