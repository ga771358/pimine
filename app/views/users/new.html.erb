<%= form_for @user,:url => users_path do |f| %>
	
	<%= f.label :sid  %>
	<%= f.text_field :sid %>
	<br>

	<%= f.label :name  %>
	<%= f.text_field :name %>
	<br>

	<%= f.label :email  %>
	<%= f.text_field :email %>
	<br>

	<%= f.hidden_field :tnum , value: "0" %>
	<%= f.hidden_field :score , value: "0" %>

	<%= f.submit "Create" ,class: "btn btn-primary" %>
<% end %>

<%= link_to "login", users_login_path ,class: "btn btn-info"  %>